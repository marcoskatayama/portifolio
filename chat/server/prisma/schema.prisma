generator client {
  provider = "prisma-client"
  output   = "../prisma/generated/prisma"
  engineType      = "client" // enable Prisma ORM without Rust
}

datasource db {
  provider = "postgresql"
}

model Message {
  id        String   @id @default(uuid())
  text      String
  author    String
  room      String   @default("general")
  createdAt DateTime @default(now())
}